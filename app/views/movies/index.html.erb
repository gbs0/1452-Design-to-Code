<div class="container">
  <div class="row">
    <div class="col">
      <h1 class="h2 my-3 d-flex justify-content-center">Movies to watch üçø</h1>

      <div data-controller="movies">
        <%= form_with url: movies_path, method: :get, html: {class: "mb-4 form-bordered", data: {movies_target: "form"}} do |f| %>
          <%= f.label :query, "Type a movie title" %>
          <%= f.text_field :query,
                           class: "form-control input-bordered",
                           value: params[:query],
                           data: {action: "keyup->movies#search", movies_target: "input"}
                           %>
        <% end %>

        <%= render "list", movies: @movies %>
      </div>
    </div>
  </div>
</div>
